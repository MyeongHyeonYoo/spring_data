	<aop:config>
		<aop:pointcut id="allPointcut" expression="execution(*  com.springbook.biz..*Impl.*(..))"/>
		
		<aop:pointcut id="getPointcut" expression="execution(*  com.springbook.biz..*Impl.get*(..))"/>
		
		<aop:aspect ref="log">
